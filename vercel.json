{
	"version": 2,
	"builds": [
		{
			"src": "package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist"
			}
		},
		{
			"src": "server/index.js",
			"use": "@vercel/node"
		}
	],
	"routes": [
		{
			"src": "/api/socket.io/(.*)",
			"dest": "server/index.js",
			"headers": {
				"Access-Control-Allow-Origin": "*",
				"Access-Control-Allow-Methods": "GET,POST,OPTIONS",
				"Access-Control-Allow-Headers": "Content-Type",
				"Access-Control-Allow-Credentials": "true"
			}
		},
		{
			"src": "/api/(.*)",
			"dest": "server/index.js"
		},
		{
			"src": "/(.*)",
			"dest": "/$1"
		}
	]
}
